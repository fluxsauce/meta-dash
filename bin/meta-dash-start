#!/usr/bin/env node

const git = require('simple-git/promise');
const metaLib = require('../lib/meta');

const meta = metaLib.get();

Object.keys(meta.projects).forEach((projectName) => {
  git(projectName)
    .status()
    .then((status) => {
      console.log(`${projectName} [${status.current}]`);
      // console.log(status);
    });
});
